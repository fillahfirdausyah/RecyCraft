<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/PremiereColor">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="-8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_left_white" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/rounded_bg_search_action_bar_market_place"
        android:drawableStart="@drawable/ic_search_grey"
        android:drawablePadding="10dp"
        android:hint="Search crafts product"
        android:importantForAutofill="no"
        android:padding="7dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.777" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_adjust_white" />
</androidx.constraintlayout.widget.ConstraintLayout>